<head>
  <link rel="stylesheet" href="/style.css" />

  <!-- Latest compiled and minified CSS -->
  <link
    href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
    rel="stylesheet"
  />
  <!-- Latest compiled JavaScript -->
  <script
    src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"
    defer
  ></script>
</head>

<div class="container justify-content-center card bg-primary text-light my-3">
  <h1 class="card-body text-center">我的個人日記 APP</h1>
</div>

<div class="container justify-content-center">
  <div class="row row-cols-1 row-cols-md-3 g-4 card-journey">
    <% for (let i = 0; i < posts.length; i++) { %>
    <div class="col">
      <div class="card bg-light text-center">
        <div class="card-body">
          <h3 class="card-title text-dark"><%=posts[i].title%></h3>
          <div class="card-text text-dark-emphasis"><%=posts[i].content%></div>
          <a href="/view?index=<%=i%>" class="stretched-link">閱讀全文</a>
        </div>
      </div>
    </div>
    <% } %>
    <div class="col">
      <div class="card bg-light text-center">
        <div class="card-body">
          <a href="/new" class="stretched-link">新增日記</a>
        </div>
      </div>
    </div>
  </div>
</div>
